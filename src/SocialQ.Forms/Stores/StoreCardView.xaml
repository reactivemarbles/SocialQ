<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:resources="clr-namespace:SocialQ.Resources;assembly=SocialQ.Resources"
             x:Class="SocialQ.Forms.StoreCardView">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <pancakeView:PancakeView
                HeightRequest="180"
                WidthRequest="320"
                Margin="10"
                HorizontalOptions="Center"
                CornerRadius="25"                
                BackgroundColor="{TemplateBinding StoreColor}">
                <Grid
                    RowSpacing="0"
                    ColumnSpacing="0"
                    RowDefinitions="*,*,*,*,*"
                    ColumnDefinitions="*,*">
                    <Image
                        Grid.RowSpan="4"
                        Grid.Row="0"
                        Aspect="AspectFill" />
                    <BoxView
                        Grid.Row="0"
                        Grid.RowSpan="4"
                        Grid.ColumnSpan="2"
                        BackgroundColor="White"
                        Opacity=".65" />
                    <Label
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        AutomationId="StoreNameLabel"
                        Text="{TemplateBinding StoreName}"
                        HorizontalOptions="Center"
                        FontSize="Large"
                        FontAttributes="Bold" />
                    <Label
                        Grid.Row="1"
                        AutomationId="StoreRemainingQueueLabel"
                        Text="{TemplateBinding CurrentWait}"
                        HorizontalOptions="Center"
                        FontSize="Medium"
                        FontAttributes="Bold" />
                    <Label
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        AutomationId="CloseTimeLabel"
                        Text="{TemplateBinding CloseTime}"
                        HorizontalOptions="Center"
                        FontSize="Small"
                        LineBreakMode="WordWrap"
                        HorizontalTextAlignment="Center" />
                    <Label
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        AutomationId="CurrentTimeLabel"
                        Text="{TemplateBinding CurrentTime}"
                        HorizontalOptions="Center"
                        FontSize="Small"
                        LineBreakMode="WordWrap"
                        HorizontalTextAlignment="Center" />

                    <Button
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        BackgroundColor="{TemplateBinding StoreColor}"
                        FontSize="Large" 
                        TextColor="Black"
                        Text="{x:Static resources:Strings.Add}"
                        Command="{TemplateBinding AddCommand}"/>
                </Grid>
            </pancakeView:PancakeView>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>